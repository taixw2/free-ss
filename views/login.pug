extends layout

block content
  h1 欢迎进入
  form(action="/auth/login" method="POST")
    input(type="text" placeholder="请输入用户名" name='user')
    br
    br
    input(type="password" placeholder="请输入密码" name='password')
    br
    br
    input(type="text" placeholder="请输入验证码" name='vercode')
    img(src="/auth/vercode?" + token, alt="", onclick="this.src='/auth/vercode?' + Math.random()")
    br
    br
    button(type="submit") 登录 
    button(type="button" onclick="location.href='/auth/regist'") 注册
    
